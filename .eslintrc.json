{
  "rules": {
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [ 2, "single" ],
    "linebreak-style": [ 2, "unix" ],
    "semi": [ 2, "always" ],
    "no-loop-func": 2,
    "default-case": 2,
    "no-alert": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "curly": 2,
    "no-shadow-restricted-names": 2,
    "func-names": 2,
    "no-undef-init": 2,
    "no-undefined": 2,
    "array-bracket-spacing": [2, "never"],
    "brace-style": 2,
    "no-unneeded-ternary": 2,
    "operator-assignment": [2, "always"],
    "space-unary-ops": 2,
    "space-in-parens": [2, "always", {
      "exceptions": ["{}", "[]", "empty"]
    }],
    "space-return-throw-case": 2,
    "space-infix-ops": 2,
    "space-after-keywords": 2,
    "one-var": [2, "never"],
    "comma-style": [2, "last"],
    "comma-dangle": [2, "always-multiline"],
    "camelcase": [
      2,
      {
        "properties": "never"
      }
    ],
    "strict": [ 2, "global" ],
    "no-param-reassign": [
      2,
      {
        "props": true
      }
    ],
    "complexity": [ 2, 3 ],
    "max-depth": [2, 3],
    "max-len": [1, 80, 4],
    "max-nested-callbacks": [2, 3],
    "max-params": [2, 3],
    "max-statements": [2, 15],
    "new-cap": 2,
    "new-parens": 2,
    "no-negated-condition": 2,
    "no-nested-ternary": 2,
    "no-lonely-if": 2,
    "no-spaced-func": 2,
    "no-plusplus": [
      2,
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 3
      }
    ],
    "eqeqeq": [
      2,
      "smart"
    ],
    "dot-location": [
      2,
      "property"
    ],
    "arrow-parens": [2, "always"],
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "prefer-const": 2,
    "prefer-template": 2,
    "arrow-spacing": 2
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "amd": true
  },
  "globals": {
    "angular": 1,
    "TweenMax": 1
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "modules": true
  },
  "plugins": [
    "angular"
  ]
}
