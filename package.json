{
  "name": "leean-angular",
  "private": true,
  "version": "0.1.0",
  "description": "An atomic starter project for Leean",
  "repository": "https://github.com/moxie-leean/leean-angular",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "bower": "^1.3.1",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "eslint-plugin-angular": "^0.15.0",
    "gulp": "^3.9.0",
    "gulp-env": "^0.4.0",
    "gulp-rename": "^1.2.0",
    "http-server": "^0.6.1",
    "json-server": "^0.8.8",
    "node-sass": "^3.4.2",
    "shelljs": "^0.2.6",
    "stringify": "^4.0.1",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim",
      "stringify"
    ]
  },
  "browserify-shim": {
    "jQuery": "global:jQuery",
    "angular": "global:angular"
  },
  "scripts": {
    "postinstall": "bower install && npm run browserify",
    "prestart": "npm install",
    "start": "http-server -a localhost -p 8000 -c-1",

    "json-server": "json-server --watch config/json/db.json",

    "browserify": "browserify ./app/app.js -d > ./public/js/bundle.js",
    "js": "npm run browserify",
    "watch:js": "watchify ./app/app.js -d -o public/js/bundle.js -v",
    "ci:js": "eslint app/**/*.js",

    "styles": "node-sass app/style.scss -o=public/css/",

    "test": "npm run js:ci"
  }
}
